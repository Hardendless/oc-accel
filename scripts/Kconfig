###############################################################################
#   Menu starts
#   Select the ACTION_ROOT
choice
    bool "Action Name"
    help
      Action Name:
      Select an existing action example or define a new action.
    default HLS_VADD

    config USER_HLS_ACTION
        bool "New HLS Action"
        select ENABLE_HLS_SUPPORT
        help
          This option is a placeholder for an action written by the user in HLS.

    config USER_HDL_ACTION
        bool "New HDL Action"
        help
          This option is a placeholder for an action written by the user in a
          hardware description language such as VHDL or Verilog.

    
    config HDL_PERF_TEST
        bool "HDL Perf (Bandwidth/Latency) Test"
        help
          This is an example written in Verilog (1024b data width, peformance measuring)
          Refer to the README in this action directory for more information
        select EXAMPLE_INFRA_T1
        select EXAMPLE_ACTION_A10


    config HLS_VADD_MATMUL
        bool "HLS Vector-Add and Matrix Multiplication (4 kernels)"
        help
          This is an example written in HLS, from Xilinx Vitis Examples
          Refer to the README in this action directory for more information
        select EXAMPLE_INFRA_T1
        select EXAMPLE_ACTION_A10
        select ENABLE_HLS_SUPPORT

    config HLS_VADD
        bool "HLS Vector-Add example (1 kernel)"
        help
          This is an example written in HLS, from Xilinx Vitis Examples
          Refer to the README in this action directory for more information
        select EXAMPLE_INFRA_T1
        select EXAMPLE_ACTION_A10
        select ENABLE_HLS_SUPPORT


#    config HLS_MEMCOPY_1024
#        bool "HLS Memcopy 1024b"
#        help
#          This is an example written in High Level Synthesis Language (1024b data width)
#          It copies data between Host and FPGA DDR/HBM (4 combinations)
#          Refer to the README in this action directory for more information
#        select ENABLE_HLS_SUPPORT
#        select EXAMPLE_INFRA_T1
#        select EXAMPLE_ACTION_A12 if FPGACARD_AD9V3
#        select EXAMPLE_ACTION_A13 if (FPGACARD_AD9H3 || FPGACARD_AD9H7)
#        # Note: Select the action template according to the card
endchoice


# For user defined new actions, ask for the name
config ACTION_NAME
    depends on USER_HLS_ACTION
    string "Input the new action name"
    default "hls_my_test"

config ACTION_NAME
    depends on USER_HDL_ACTION
    string "Input the new action name"
    default "hdl_my_test"

# !!! This doesn't show in the menuwindow
# Override the name for exsiting actions
config ACTION_NAME
    string
    default "hdl_perf_test"   if HDL_PERF_TEST
    default "hls_vadd_matmul" if HLS_VADD_MATMUL
    default "hls_vadd"        if HLS_VADD


###############################################################################
choice
    bool "CAPI Version"
    default OPENCAPI30
    help
      Select CAPI Version

    config OPENCAPI30
        bool "OpenCAPI3.0"

    config CAPI20
        bool "CAPI2.0 -- not supported yet"
endchoice

###############################################################################
choice
    bool "Target Platform"
    default FPGACARD_AD9V3
    help
      Select the hardware platform that OC-Accel supports.
    config FPGACARD_AD9V3
        bool "Alphadata 9V3 (VU3P)"
        help
          Refer to Product webpage for more information about the card capacity.
    
    config FPGACARD_AD9H3 
        bool "AlphaData 9H3 (VU33P)"
        help
          Refer to Product webpage for more information about the card capacity.
          AlphaData 9H3 has ethernet and 2x 4GB HBM Gen2. Uses Xilinx FPGA VU33P.

    config FPGACARD_AD9H7
        bool "AlphaData 9H7 (VU37P)"
        help
          Refer to Product webpage for more information about the card capacity.
endchoice

###############################################################################
choice
    bool "Infrastructure Template"
    depends on USER_HDL_ACTION || USER_HLS_ACTION
    default USER_INFRA_T1
    help
        Select the Infrastructure Template
    config USER_INFRA_T1
        bool "T1 (bridge minimum)"
        help
          Refer to OC-Accel documentation for detailed information.
    
    config USER_INFRA_T2
        bool "T2 (job manager reg_config)"
        help
          Refer to OC-Accel documentation for detailed information.
  
    config USER_INFRA_T4
        bool "T4 (odma -- not valid)"
        help
          Refer to OC-Accel documentation for detailed information.
  
    config USER_INFRA_T8
        depends on OPENCAPI30
        bool "T8 (M1 -- not valid)"
        help
          Refer to OC-Accel documentation for detailed information.
  
endchoice

###############################################################################
#  Infra Template Parameters: Kernel Number @ T1/T2
config KERNEL_NUMBER
    depends on (USER_HLS_ACTION || USER_HDL_ACTION) && (USER_INFRA_T1 || USER_INFRA_T2)
    int "Input the number of kernels (1 to 16)"
    range 1 16
    default 1


# !!! This doesn't show in the menuwindow
# Override the number for existing example
config KERNEL_NUMBER
    int
    default 1 if HDL_PERF_TEST
    default 4 if HLS_VADD_MATMUL
    default 1 if HLS_VADD

###############################################################################
#  The top module name of user kernels for HLS actions
config KERNELS
    depends on (USER_HLS_ACTION || USER_HDL_ACTION) && (USER_INFRA_T1 || USER_INFRA_T2)
    string "The top module names of your hls kernel. Can use comma separated format to specify different kernel top for each kernel."
    default ""

# !!! This doesn't show in the menuwindow
# Override the name for existing example
config KERNELS
    string
    default "kernel_perf_test" if HDL_PERF_TEST
    default "vadd,matmul,vadd,matmul" if HLS_VADD_MATMUL
    default "vadd" if HLS_VADD

###############################################################################
#  Infra Template Parameters: Data bus Width of AXI Ports @ T1, T4
config WIDTH_AXIMM_PORTS
    depends on (USER_HDL_ACTION) && (USER_INFRA_T1 || USER_INFRA_T4)
    int "Input the bus bitwidth of AXI-MM Ports (32 to 1024, exponent of 2)"
    default 1024

# !!! This doesn't show in the menuwindow
# Override the number for existing example
config WIDTH_AXIMM_PORTS
    int
    default 1024 if HDL_PERF_TEST
    default 1024 if HLS_VADD_MATMUL
    default 1024 if HLS_VADD

###############################################################################
choice
    bool "Action Template"
    depends on USER_HDL_ACTION || USER_HLS_ACTION
    default USER_ACTION_A10
    help
        Select the Action Template
    config USER_ACTION_A10
        depends on USER_INFRA_T1
        bool "A10 (Connects T1, no peripherals)"
        help
          Refer to OC-Accel documentation for detailed information.
    
    config USER_ACTION_A11
        depends on USER_INFRA_T1
        depends on FPGACARD_AD9V3
        bool "A11 (Connects T1, one channel DDR4)"
        help
          Refer to OC-Accel documentation for detailed information.
    
    config USER_ACTION_A12
        depends on USER_INFRA_T1
        depends on FPGACARD_AD9H3 || FPGACARD_AD9H7
        bool "A12 (Connects T1, one channel HBM)"
        help
          Refer to OC-Accel documentation for detailed information.

    config USER_ACTION_A20
        depends on USER_INFRA_T2
        bool "A20 (Connects T2, no peripherals)"
        help
          Refer to OC-Accel documentation for detailed information.
        
    config USER_ACTION_A40
        depends on USER_INFRA_T4
        bool "A40 (Connects T4, no peripherals)"
        help
          Refer to OC-Accel documentation for detailed information.
    config USER_ACTION_A81
        depends on USER_INFRA_T8
        depends on FPGACARD_AD9V3
        bool "A81 (Connects T8, one channel DDR4)"
        help
          Refer to OC-Accel documentation for detailed information.
endchoice

###############################################################################
config OCSE_PATH
    string "OCSE_ROOT: Path to OpenCAPI Simulation Engine Root"
    default "../ocse"

###############################################################################
choice
    bool "Simulator"
    default SIM_XSIM
    help
      Supported simulators are Xilinx' xsim and Cadence's irun.
      If NVMe support is enabled it is only possible to use irun
      or to set the simulator to "nosim" to disable model build
      and simulation.

    config SIM_XSIM
        bool "xsim"
        help
          Default Xilinx simulator


    config SIM_XCELIUM
        bool "xcelium"
        help
          Cadence xcelium simulator (requires a specific license)


    config NO_SIM
        bool "nosim"

endchoice

config SIMULATOR
    string
    default "xsim"     if SIM_XSIM
    default "xcelium"  if SIM_XCELIUM
    default "nosim"    if NO_SIM

# Don't add them when not available
#    default "modelsim" if SIM_MODELSIM
