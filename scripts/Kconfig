###############################################################################
mainmenu "OC-Accel Configuration Menu"
###############################################################################
# Basic information 

config CAPI_VER
    string
    default "opencapi30" if OPENCAPI30
    default "capi20" if CAPI20

config ENABLE_HLS_SUPPORT
    bool
    default n

config HLS_SUPPORT
    string
    default "TRUE" if ENABLE_HLS_SUPPORT
    default "FALSE" if !ENABLE_HLS_SUPPORT

